<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.openshift</groupId>
    <artifactId>booster-parent</artifactId>
    <version>10</version>
  </parent>

  <groupId>io.openshift.booster</groupId>
  <artifactId>wfswarm-rest-http-secured-parent</artifactId>
  <version>5-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Secured HTTP Example - Parent</name>
  <description>Secured WildFly Swarm - Rest &amp; Red Hat SSO</description>

  <properties>
    <version.wildfly.swarm>7.0.0.redhat-6</version.wildfly.swarm>
  </properties>

  <modules>
    <module>app</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.wildfly.swarm</groupId>
        <artifactId>bom</artifactId>
        <version>${version.wildfly.swarm}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.wildfly.swarm</groupId>
        <artifactId>bom-certified</artifactId>
        <version>${version.wildfly.swarm}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.keycloak</groupId>
        <artifactId>keycloak-authz-client</artifactId>
        <version>2.5.7.Final-redhat-2</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

   <build>
      <plugins>
         <plugin>
           <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-surefire-plugin</artifactId>
           <configuration>
             <systemPropertyVariables>
               <swarm.build.repos>https://maven.repository.redhat.com/ga/,https://maven.repository.redhat.com/earlyaccess/all/</swarm.build.repos>
             </systemPropertyVariables>
           </configuration>
         </plugin>
     </plugins>
   </build>

</project>
